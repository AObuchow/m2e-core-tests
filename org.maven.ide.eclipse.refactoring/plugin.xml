<?eclipse version="3.2"?>
<plugin>

  <extension point="org.eclipse.ui.popupMenus">
     <objectContribution
           id="org.maven.ide.eclipse.editor.pomContributor"
           adaptable="true"
           nameFilter="pom.xml"
           objectClass="org.eclipse.core.resources.IFile">
        <action id="org.maven.ide.eclipse.editor.RenameAction"
              class="org.maven.ide.eclipse.refactoring.rename.RenameArtifactAction"
              enablesFor="1"
              label="Rename Maven artifact..."
              menubarPath="org.eclipse.jdt.ui.refactoring.menu/Maven refactoring"/>
        <!-- add visibility condition for managet poms -->      
     </objectContribution>
     <objectContribution
           id="org.maven.ide.eclipse.editor.projectContributor"
           adaptable="true"
           objectClass="org.eclipse.core.resources.IProject">
        <action id="org.maven.ide.eclipse.editor.RenameAction"
              class="org.maven.ide.eclipse.refactoring.rename.RenameArtifactAction"
              enablesFor="1"
              label="Rename Maven artifact..."
              menubarPath="org.eclipse.jdt.ui.refactoring.menu/Maven refactoring"/>
        <visibility>
          <and>
            <objectState name="open" value="true"/>
            <objectState name="nature" value="org.maven.ide.eclipse.maven2Nature"/>
          </and>
        </visibility>
     </objectContribution>
  </extension>
<extension
       id="popupMenus"
       point="org.eclipse.ui.popupMenus">
    <viewerContribution
          id="org.maven.ide.eclipse.refactoring.menuContributions"
          targetID="org.maven.ide.eclipse.editor.MavenPomEditor.refactoring">
       <action
             class="org.maven.ide.eclipse.refactoring.exclude.DependencyExcludeAction"
             enablesFor="1"
             icon="icons/exclude.gif"
             id="org.maven.ide.eclipse.refactoring.exclude.DependencyExcludeAction"
             label="Exclude artifact"
             menubarPath="org.maven.ide.eclipse.editor.MavenPomEditor.refactoring"
             tooltip="Exclude artifact"/>
    </viewerContribution>
   <objectContribution id="org.maven.ide.eclipse.classpathMenu" adaptable="true"
         objectClass="org.eclipse.jdt.core.IPackageFragmentRoot">
     <action id="org.maven.ide.eclipse.refactoring.exclude.DependencyExcludeAction"
             class="org.maven.ide.eclipse.refactoring.exclude.DependencyExcludeAction"
             label="Exclude artifact"
             style="pulldown"
             menubarPath="additions"
             enablesFor="1"
             icon="icons/exclude.gif"/>
     <!--
     <visibility>
        <objectState name="name" value="pom.xml"/>
     </visibility>
     -->
   </objectContribution>
 </extension>

</plugin>
