<settings>
	<proxies>
		<proxy>
			<active>true</active>
			<protocol>http</protocol>
			<host>localhost</host>
			<port>@port.http@</port>
			<username>proxyuser</username>
			<password>proxypass</password>
		</proxy>
	</proxies>
	<mirrors>
		<mirror>
			<id>nexus</id>
			<mirrorOf>external:*</mirrorOf>
			<url>http://bad.host/remoterepo</url>
		</mirror>
	</mirrors>
</settings>

